const pet = {
    name: "Chewie",
    typeOfPet: "Husky",
    age: 2, 
    colour: "black",
eating: true,
drinking: true,

eat(){
    if(this.eating){
return `${pet.name} is eating`
    }
},

drink(){
    if(this.drinking){
        return `${pet.name} is drinking`
}
},
}

console.log(pet.eat());
console.log(pet.drink());




