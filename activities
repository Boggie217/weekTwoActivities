// Function to check if a number is a palindrome
function isPalindrome(number) {
    // Convert the number to a string
    const numberStr = String(number);
  
    // Reverse the string
    const reversedStr = numberStr.split('').reverse().join('');
  
    // Compare the reversed string with the original string
    if (numberStr === reversedStr) {
      return true;
    } else {
      return false;
    }
  }
  
  // Example usage
  const num1 = 12321;
  const num2 = 45654;
  
  if (isPalindrome(num1) && isPalindrome(num2)) {
    console.log("Both numbers are palindromes.");
  } else if (isPalindrome(num1)) {
    console.log("Only the first number is a palindrome.");
  } else if (isPalindrome(num2)) {
    console.log("Only the second number is a palindrome.");
  } else {
    console.log("Neither number is a palindrome.");
  }
  



