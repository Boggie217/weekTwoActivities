//activity 2

const topping = "cheese";

switch (topping) {
  case "Cheese":
    console.log(`${topping} is an important ingredient for my pizza.`);
    break;
  case "Ham & mushroom":
    console.log(`${topping} is an important ingredient for my pizza.`);
    break;
  case "Pepperoni":
    console.log(`${topping} is an important ingredient for my pizza.`);
    break;
  case "Pineapple":
    console.log(`${topping} should not be on a pizza.`);
    break;
  default:
    console.log(`I don't mind having ${topping} on my pizza.`);
    break;
}




